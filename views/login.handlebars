<div class="row justify-space-between-md">
  <div class="login-card col text-center wider">
    <h2 class="page-title text-light fw-bold">Login</h2>
    <br>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="text-light">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <br>
      <div class="form-group">
        <label for="password-login" class="text-light">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <br>
      <div class="form-group">
        <button class="btn btn-primary text-light cornFlower" type="submit">login</button>
      </div>
    </form>
    <br><br><br><br>
  </div>
  
  <div class="login-card col text-center wider">
    <h2 class="page-title text-light fw-bold">Signup</h2>
    <br>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup" class="text-light">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <br>
      <div class="form-group">
        <label for="email-signup" class="text-light">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <br>
      <div class="form-group">
        <label for="password-signup" class="text-light">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <br>
      <div class="form-group">
        <button class="btn btn-primary text-light cornFlower" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>
